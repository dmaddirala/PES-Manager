<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Player's Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_player_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Player's Value (Rs.)"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/rb_base_card"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Base Card"
            android:checked="false" />
        <RadioButton
            android:id="@+id/rb_featured_card"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Featured Card"
            android:checked="false" />
        <RadioButton
            android:id="@+id/rb_iconic_moment_card"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Iconic Moment Card"
            android:checked="false" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/navy_blue"
            android:text="SAVE" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/navy_blue"
            android:text="@android:string/cancel" />

    </LinearLayout>

</LinearLayout>